<h1>Novo Seguro</h1>

<%= form_with(model: @insurance, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :category_id%>
    <%= f.collection_select :category_id, @categories, :id, :description, {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :daily_rate %>
    <%= f.text_field :daily_rate, class: 'form-control' %>
  </div>
  <%= f.submit 'Enviar' %>
<% end %>
